<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_sounds_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/adapter_sounds_name_text_view"
        style="@style/TextAppearance.Subheading.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/adapter_sounds_image_view" />

    <TextView
        android:id="@+id/adapter_sounds_description_text_view"
        style="@style/TextAppearance.Body2.PrimarySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_sounds_name_text_view"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/adapter_sounds_image_view" />
</RelativeLayout>